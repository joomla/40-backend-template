<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>plg_system_cdn</name>
	<author>Joomla! Project</author>
	<creationDate>November 2016</creationDate>
	<copyright>Copyright (C) 2005 - 2016 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>PLG_CDN_XML_DESCRIPTION</description>
	<files>
		<filename plugin="cdn">cdn.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_cdn.ini</language>
		<language tag="en-GB">en-GB.plg_system_cdn.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="jquery"
					type="radio"
					class="switcher"
					default="0"
					label="PLG_CDN_JQUERY_LABEL"
					description="PLG_CDN_JQUERY_DESCRIPTION"
				>
					<option value="0">Local</option>
					<option value="1">CDN</option>
				</field>
				<field
					name="bootstrap"
					type="radio"
					class="switcher"
					default="0"
					label="PLG_CDN_BOOTSTRAP_LABEL"
					description="PLG_CDN_BOOTSTRAP_DESCRIPTION"
				>
					<option value="0">Local</option>
					<option value="1">CDN</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
